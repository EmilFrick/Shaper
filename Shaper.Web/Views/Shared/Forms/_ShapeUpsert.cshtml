@model ShapeUpsertVM
@{
    var formtype = Model.Id == null? "Create" : "Update";
}
<form method="post">
    <input asp-for="Id" hidden />
    <div class="row m-3">
        <div class="col-5">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="col-5">
            <label asp-for="AddedValue"></label>
            <input asp-for="AddedValue" class="form-control">
            <span asp-validation-for="AddedValue"></span>
        </div>
        <div class="col-5">
            <label asp-for="HasFrame" class="form-check-label" for="flexCheckDefault">Add Frame?</label>
            <input asp-for="HasFrame" class="form-check-input" type="checkbox" id="flexCheckDefault">
        </div>
    </div>
    <partial name="Buttons/_Confirm" model="formtype" />
</form>
